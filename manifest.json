{
  "manifest_version": 2,

  "name": "Craigslist Ad-saver",
  "description": "Gives you a window to save ads with on craigslist, so you can revisit them later.",
  "version": "1.0",
	
  "permissions": [
	"http://*/*",
	"storage",
	"tabs",
	"background"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "background": {
	"scripts": ["background.js"]
	},
	
	"content_scripts": [
	{
	"matches": ["*://*/*"],
	"js": ["angular.min.js","jquery-2.0.3.min.js","content_script.js"],
	"css": ["window.css"]
	}
	],

	"web_accessible_resources": ["angular.min.js","jquery-2.0.3.min.map", "window.html","window.js","adList.js","scripts.html"]
}
	
