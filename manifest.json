{
  "manifest_version":2,
  
  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  
  "permissions": [
    "http://*/*",
    "storage",
    "tabs",
    "background"
  ],
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "background": {
    "page": "background.html"
  },
  
  "content_scripts": [
  {
    "matches": ["http://*/*"],
    "js": ["content_script.js"]
  }
  ]
}
